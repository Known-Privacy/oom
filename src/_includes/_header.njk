<div class="bg-black">
    <div class="container mx-auto px-4 sm:px-8">
        <div class="relative flex items-center justify-between">
            <div class="flex-1 flex right-0 sm:items-stretch sm:justify-start">
                <div class="flex-shrink-0 flex items-center">
                <a href="{{ '/' | url }}"><img class="block lg:hidden h-12 w-auto" src="{{ '/assets/images/opt-out-machine-logo-white.svg' | url }}" alt="The Opt-Out Machine"></a>
                <a href="{{ '/' | url }}"><img class="hidden lg:block h-16 w-auto" src="{{ '/assets/images/opt-out-machine-logo-white.svg' | url }}" alt="The Opt-Out Machine"></a>
                </div>
            </div>
            <!-- lg screen -->
            <div class="hidden lg:flex flex-col md:flex-row md:space-x-12 md:mt-0 h-full">
                {% for item in navigation %}
                <a href="{{ item.url | url }}" class="text-white text-lg duration-700 ease-out border-t-4 border-t-black border-t-solid hover:border-t-4 hover:border-t-white pt-7">{{ item.label }}</a>
                {% endfor %}
                
                <a href="https://app.knownprivacy.com/users/register" class="py-5 px-6 m-3 text-white text-lg border-2 border-white rounded-full duration-700 ease-out hover:border-gray-500">Sign Up</a>
            </div>


            <!-- hamburger rubble rubble -->
            <div class="lg:hidden text-white flex md:flex-row md:space-x-12 h-full">
                <a href="https://app.knownprivacy.com/users/register" class="p-3 mx-3 my-5 text-white border-2 border-white rounded-full duration-700 ease-out hover:border-gray-500">Sign Up</a>
                
                <div class="mobile-menu-button space-y-2 my-8 mx-3 sm:mx-1">
                    <div class="w-10 h-1 bg-white rounded"></div>
                    <div class="w-10 h-1 bg-white rounded"></div>
                    <div class="w-10 h-1 bg-white rounded"></div>
                </div>
            
                <div class="absolute top-20 right-2 md:right-0 hidden mobile-menu bg-black p-6 w-80">
                    {% for item in navigation %}
                    <a href="{{ item.url | url }}" class="block text-white text-lg duration-700 ease-out pt-7">{{ item.label }}</a>
                    {% endfor %}
                </div>
                <script>
                const btn = document.querySelector(".mobile-menu-button");
                const menu = document.querySelector(".mobile-menu");
                btn.addEventListener("click", () => menu.classList.toggle("hidden"));
                </script>
            </div>


        </div>
    </div>
</div>
